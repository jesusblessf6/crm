<div class="container">
	<div class="span6 offset3" style="margin-top: 100px;">
		<div class="caption">
			<h4>注册</h4>
		</div>
		<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
			<div class="control-group">
				<%= f.label :login_name, "登录名", class: "control-label"%>
				<div class="controls">
					<%= f.text_field :login_name%>
				</div>
			</div>
			<div class="control-group">
				<%= f.label :name, "姓名", class: "control-label"%>
				<div class="controls">
					<%= f.text_field :name%>
				</div>
			</div>
			<div class="control-group">
				<%= f.label :password, "密码", class: "control-label"%>
				<div class="controls">
					<%= f.password_field :password%>
				</div>
			</div>
			<div class="control-group">
				<%= f.label :password_confirmation, "密码确认", class: "control-label"%>
				<div class="controls">
					<%= f.password_field :password_confirmation%>
				</div>
			</div>
			<div class="control-group">
				<div class="controls">
					<%= f.submit "提交", class: "btn btn-primary"%>
					<%= tag "input", type: "reset", value: "重置", class: "btn"%>
				</div>
			</div>
		<%end%>
	</div>
</div>